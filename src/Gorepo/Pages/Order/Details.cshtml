@page
@model Gorepo.Pages.Order.DetailsModel

@{
    ViewData["Title"] = "订单明细";
}

<h1>订单明细</h1>

<div>
    <h4>@Model.HWZWeChatOrder.OrderId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            订单号
        </dt>
        <dd class="col-sm-10">
            @Model.HWZWeChatOrder.OrderId
        </dd>
        <dt class="col-sm-2">
            订单金额
        </dt>
        <dd class="col-sm-10">
            @Model.HWZWeChatOrder.OrderAmount.ToString("F2")
        </dd>
        <dt class="col-sm-2">
            Code
        </dt>
        <dd class="col-sm-10">
            @Model.HWZWeChatOrder.OrderCode
        </dd>
        <dt class="col-sm-2">
            支付状态
        </dt>
        <dd class="col-sm-10">
            @if (Model.HWZWeChatOrder.IsOrderPay)
            {
                <span style="color:green;">已支付</span>
            }
            else
            {
                <span>未支付</span>
            }
        </dd>
        <dt class="col-sm-2">
            创建时间
        </dt>
        <dd class="col-sm-10">
            @DateTimeOffset.FromUnixTimeMilliseconds(Model.HWZWeChatOrder.CreateTime).LocalDateTime
        </dd>
        <dt class="col-sm-2">
            更新时间
        </dt>
        <dd class="col-sm-10">
            @DateTimeOffset.FromUnixTimeMilliseconds(Model.HWZWeChatOrder.UpdateTime).LocalDateTime
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">返回列表</a>
</div>
